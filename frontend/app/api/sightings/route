import { NextResponse } from "next/server";
import connectDB from "@/lib/mongodb";
import Sighting from "@/models/Sighting";

export async function POST(request: Request) {
  try {
    const body = await request.json();
    const { lat, lng, description, accuracyM } = body;

    // Validation
    if (typeof lat !== 'number' || typeof lng !== 'number') {
      return NextResponse.json(
        { error: "Valid latitude and longitude are required" },
        { status: 400 }
      );
    }

    if (lat < -90 || lat > 90) {
      return NextResponse.json(
        { error: "Latitude must be between -90 and 90" },
        { status: 400 }
      );
    }

    if (lng < -180 || lng > 180) {
      return NextResponse.json(
        { error: "Longitude must be between -180 and 180" },
        { status: 400 }
      );
    }

    // Connect to MongoDB
    await connectDB();

    // Create new sighting with GeoJSON format
    const sighting = await Sighting.create({
      loc: {
        type: "Point",
        coordinates: [lng, lat], // GeoJSON format: [longitude, latitude]
      },
      description: description || "",
      accuracyM: accuracyM || 20,
      timestamp: new Date(),
    });

    console.log("✅ Sighting created:", sighting._id);

    return NextResponse.json({
      success: true,
      id: sighting._id,
      sighting: {
        lat,
        lng,
        description: sighting.description,
        accuracyM: sighting.accuracyM,
        timestamp: sighting.timestamp,
      }
    });
  } catch (error) {
    console.error("❌ Error saving sighting:", error);
    return NextResponse.json(
      { 
        error: "Failed to save sighting",
        details: error instanceof Error ? error.message : "Unknown error"
      },
      { status: 500 }
    );
  }
}

// GET all sightings (optional - for displaying history)
export async function GET(request: Request) {
  try {
    await connectDB();

    const { searchParams } = new URL(request.url);
    const limit = parseInt(searchParams.get("limit") || "50");

    const sightings = await Sighting.find()
      .sort({ timestamp: -1 })
      .limit(limit)
      .lean();

    return NextResponse.json(sightings);
  } catch (error) {
    console.error("Error fetching sightings:", error);
    return NextResponse.json(
      { error: "Failed to fetch sightings" },
      { status: 500 }
    );
  }
}